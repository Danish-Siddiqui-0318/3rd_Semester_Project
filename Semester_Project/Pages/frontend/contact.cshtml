@{
    Layout = "_LayoutFront";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Medi</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    
    <style>
       
        body {
            background: linear-gradient(to right, #C9D6FF, #E2E2E2);
            height: 100vh;
        }
        

        .social-icons-top {
            position: absolute;
            top: 20px;
            right: 20px;
        }

            .social-icons-top a {
                font-size: 20px;
                margin: 0 8px;
                color: white;
                transition: 0.3s;
            }

                .social-icons-top a:hover {
                    color: #f8f9fa;
                }

        .contact-card {
            background: white;
            color: black;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .contact-card i {
                font-size: 28px;
                color: #007bff;
                margin-bottom: 10px;
            }

        .map-container {
            margin-top: 20px;
            border-radius: 10px;
            overflow: hidden;
        }
    </style>


</head>
<body>
   
    <div class="container " style="margin-top:200x;">
        <div class="text-center mb-4">
            <h1 class="fw-bold">📞 Contact Us</h1>
            <p class="fs-5">We are here to assist you. Reach out to us for inquiries, partnerships, and support.</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="contact-card">
                    <i class="fa-solid fa-map-marker-alt"></i>
                    <h5>Our Address</h5>
                    <p>123 Pharma Street, New York, USA</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-card">
                    <i class="fa-solid fa-phone"></i>
                    <h5>Call Us</h5>
                    <p><a href="tel:+15551234567" class="text-dark">+1 (555) 123-4567</a></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-card">
                    <i class="fa-solid fa-envelope"></i>
                    <h5>Email Us</h5>
                    <p><a href="mailto:contact@pharma.com" class="text-dark">contact@pharma.com</a></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-card">
                    <i class="fa-solid fa-globe"></i>
                    <h5>Website</h5>
                    <p><a href="https://www.pharma.com" target="_blank" class="text-dark">www.pharma.com</a></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-card">
                    <i class="fa-solid fa-clock"></i>
                    <h5>Business Hours</h5>
                    <p>Mon - Fri, 9 AM - 6 PM</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-card">
                    <i class="fa-solid fa-share-alt"></i>
                    <h5>Follow Us</h5>
                    <div class="social-icons">
                        <a href="https://facebook.com" target="_blank"><i class="fa-brands fa-facebook"></i></a>
                        <a href="https://twitter.com" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                        <a href="https://linkedin.com" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="map-container">
            <iframe  height="350" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.8354345093676!2d144.9537353153575!3d-37.816279742021024!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d5dfde8fffd%3A0xc5a6df5de2feee0!2sPharmaceutical%20Company!5e0!3m2!1sen!2sus!4v1635251669658!5m2!1sen!2us" style="border:0; width:100%" allowfullscreen="" loading="lazy"></iframe>
        </div>

    </div>


   
