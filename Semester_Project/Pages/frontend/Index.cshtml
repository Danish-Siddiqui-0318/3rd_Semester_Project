@page
@model Semester_Project.Pages.frontend.IndexModel
@{
    Layout = "_LayoutFront";
}
<style>
    body {
        background: linear-gradient(to right, #C9D6FF, #E2E2E2);
        height: 100vh;
    }
</style>


<html lang="en">
<head>

</head>

<body>
    <div class="container">
        <div class="container my-5">
            <div class="p-5 text-center bg-body-tertiary rounded-3">
                <h1 class="text-body-emphasis">Welcome to Medi</h1>
                <p class="lead">We are dedicated to transforming healthcare through innovation, research, and high-quality pharmaceutical solutions.</p>
            </div>
        </div>

        <div class="container my-5">
            <div class="p-5 text-center bg-body-tertiary rounded-3">
                <h1 class="text-body-emphasis">Innovating Healthcare, Transforming Lives</h1>
                <p class="lead">
                    At <strong>Medi Pharmacutical</strong>, we are committed to advancing medical science and delivering high-quality pharmaceutical solutions that enhance patient well-being. With cutting-edge research, innovative technology, and a dedication to excellence, we strive to improve healthcare outcomes worldwide.
                </p>
            </div>
        </div>



        <div class="container col-xxl-8 px-4 py-5">
            <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
                <div class="col-10 col-sm-8 col-lg-6">
                    <img src="https://www.compliancequest.com/wp-content/uploads/2023/11/qa-and-qc-in-pharmaceutical-industry.jpg" class="d-block mx-lg-auto img-fluid" alt="Pharmaceutical Innovation" width="700" height="500" loading="lazy">
                </div>
                <div class="col-lg-6">
                    <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Pioneering the Future of Medicine</h1>
                    <p class="lead">We harness the power of science to develop life-saving medications and breakthrough therapies. Our team of experts ensures safety, efficacy, and affordability in every product we create. From research and development to production and distribution, we maintain the highest industry standards.</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Explore More</button>
                        
                    </div>
                </div>
            </div>
        </div>

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1">Your Trusted Partner in Healthcare <span class="text-body-secondary">— Committed to Excellence.</span></h2>
                <p class="lead">Our mission is to bring hope and healing to millions through continuous innovation and a patient-centric approach. Join us in shaping a healthier, brighter future for generations to come.</p>
            </div>
            <div class="col-md-5">
                <img src="https://www.tainstruments.com/wp-content/uploads/AdobeStock_123504209-1-scaled.jpeg" class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" alt="Healthcare Image" width="500" height="500">
            </div>
        </div>


        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-5">
                <img src="https://www.alten.pt/wp-content/uploads/sites/11/2021/06/por_210518_digital_pa_quality-control_web.png" class="featurette-image img-fluid mx-auto" alt="Pharmaceutical Innovation" width="500" height="500">
            </div>
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1">Advancing Science for a Healthier Tomorrow <span class="text-body-secondary">— Innovation at Every Step.</span></h2>
                <p class="lead">We are dedicated to pushing the boundaries of medical science, ensuring that every treatment we develop meets the highest safety and efficacy standards. With our patient-first approach, we aim to provide solutions that truly make a difference in people’s lives.</p>
            </div>
        </div>


        <hr class="featurette-divider">

        <div class="container my-5">
            <div class="p-5 text-center bg-dark text-white rounded-3">
                <h1 class="text-body-emphasis">Empowering Health, Enriching Lives</h1>
                <p class="lead">Our mission is to develop groundbreaking pharmaceutical solutions that improve quality of life and create a healthier future for everyone.</p>
                
                <button type="button" class="btn btn-outline-light btn-lg px-4">Join Us</button>
            </div>
        </div>
    </div>

</body>
</html>
