@page
@model Semester_Project.Pages.frontend.TabletsModel
@{
    Layout = "_LayoutFront";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Capsule Details - Medi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        body {
            background: linear-gradient(to right, #C9D6FF, #E2E2E2);
            min-height: 100vh;
        }

        .product-container {
            max-width: 800px;
            margin: 50px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .product-title {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
        }

        .product-img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .product-details {
            font-size: 1.1rem;
            color: #555;
        }

        .btn-custom {
            display: inline-block;
            padding: 10px 20px;
            background: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="row my-5 text-center fw-bold fs-4">
        <div class="col-md-12">Single Capsule Page</div>
    </div>

    <div class="container">
        @if (Model.listTablets.Any())
        {
            @foreach (var item in Model.listTablets)
            {
                <div class="container col-xxl-8 px-4 py-5">
                    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
                        <div class="col-10 col-sm-8 col-lg-6">
                            <img src="@item.imageUrl" class="d-block mx-lg-auto img-fluid rounded" alt="@item.ModelNumber" width="700" height="500" loading="lazy">
                        </div>
                        <div class="col-lg-6">
                            <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">@item.ModelNumber</h1>
                            <p class="lead">
                                <strong>Dies :</strong> @item.Dies <br>
                                <strong>MachineSize:</strong> @item.MachineSize <br>
                                <strong>NetWeightKG :</strong> @item.NetWeightKG <br>
                                <strong>MaxPressure :</strong> @item.MaxPressure
                            </p>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                                <button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Buy Now</button>
                                <button type="button" class="btn btn-outline-secondary btn-lg px-4">More Info</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">No capsule found. Please check the ID.</p>
        }
    </div>

</body>
