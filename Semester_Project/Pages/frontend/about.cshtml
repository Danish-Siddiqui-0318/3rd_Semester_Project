@page
@model Semester_Project.Pages.frontend.aboutModel
@{
    Layout = "_LayoutFront";
}
<style>
    body {
        background: linear-gradient(to right, #C9D6FF, #E2E2E2);
        height: 100vh;
    }
</style>

<html lang="en">
<head>
</head>

<body>
    <div class="container">
        <div class="container my-5">
            <div class="p-5 text-center bg-body-tertiary rounded-3">
                <h1 class="text-body-emphasis">About Us</h1>
                <p class="lead">Delivering excellence in pharmaceuticals through innovation, research, and a commitment to global health.</p>
            </div>
        </div>

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1">Our Vision <span class="text-body-secondary">— A Healthier Tomorrow.</span></h2>
                <p class="lead">At <strong>[Your Company Name]</strong>, we envision a world where high-quality, affordable medicines are accessible to everyone. We strive to push the boundaries of medical science to create solutions that enhance lives and promote well-being.</p>
            </div>
            <div class="col-md-5">
                <img src="https://www.jubilantpharma.com/images/our-vision.jpg" class="d-block mx-lg-auto img-fluid" alt="Our Vision" width="500" height="500" loading="lazy">
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-5">
                <img src="https://www.westpharma.com/-/media/WestPharma/Images/About-West/our-values-video-poster.png" class="d-block mx-lg-auto img-fluid" alt="Our Mission" width="500" height="500" loading="lazy">
            </div>
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1">Our Mission <span class="text-body-secondary">— Innovation in Healthcare.</span></h2>
                <p class="lead">We are dedicated to developing advanced pharmaceuticals that address critical health challenges. Through rigorous research and cutting-edge technology, we create safe and effective treatments that improve the quality of life for patients worldwide.</p>
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1">Our Commitment <span class="text-body-secondary">— Quality & Trust.</span></h2>
                <p class="lead">We adhere to the highest industry standards, ensuring that every product we manufacture meets rigorous quality control and regulatory requirements. Our dedication to ethical business practices and patient-centric care sets us apart as a trusted partner in healthcare.</p>
            </div>
            <div class="col-md-5">
                <img src="https://www.jubilantpharma.com/images/our-promise.jpg" class="d-block mx-lg-auto img-fluid" alt="Our Commitment" width="500" height="500" loading="lazy">
            </div>
        </div>

        <hr class="featurette-divider">
    </div>
</body>
</html>
