@page "{id:int}"
@model Semester_Project.Pages.frontend.UpdatePortfolioModel
@{
    Layout = "_LayoutFront";
}

<style>
    body {
        background: linear-gradient(to right, #C9D6FF, #E2E2E2);
    }

    .btn-custom {
        border-radius: 25px;
        transition: all 0.3s ease-in-out;
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 150px;
    }
</style>

<div class="container ">
    <div class="form-container">
        <h2 class="text-center mb-4">Update Portfolio</h2>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-danger">@Model.Message</div>
        }

        <form method="post">
            <div class="mb-3">
                <input type="hidden" id="PortfolioId" />
                <label for="description" class="form-label">Portfolio Description:</label>
                <textarea id="description" name="Description" class="form-control" rows="4">@Model.Description</textarea>
            </div>
            <div class="">
                <button type="submit" class="btn btn-dark  btn-custom ">Update Portfolio</button>
                <a href="/frontend/Career" class="btn btn-outline-dark btn-custom">Back to Portfolio</a>

            </div>
        </form>
        </div>
        </div>
