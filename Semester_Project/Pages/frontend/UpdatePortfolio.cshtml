@page "{id:int}"
@model Semester_Project.Pages.frontend.UpdatePortfolioModel
@{
    Layout = "_LayoutFront";
}

<h2>Update Portfolio</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="color: red;">@Model.Message</p>
}

<form method="post">
    <input type="hidden" asp-for="PortfolioId" />

    <label for="description">Portfolio Description:</label>
    <textarea id="description" name="Description" rows="4" cols="50">@Model.Description</textarea>
    <br />
    <button type="submit">Update Portfolio</button>
</form>

<br />
<a href="/frontend/Career">Back to Portfolio</a>
