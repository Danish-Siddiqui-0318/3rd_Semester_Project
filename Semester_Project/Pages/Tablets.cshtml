@page
@model Semester_Project.Pages.TabletsModel
@{
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <!-- /.row-->
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4>Capsules Data</h4>
                            <a class="btn btn-success btn-sm" href="/createUsers">Add Capsule</a>
                        </div>
                        <div class="card-body">
                            <table class="table table-responsive-sm table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Model Number</th>
                                        <th>Dies</th>
                                        <th>MaxPressure</th>
                                        <th>MaxDiameter</th>
                                        <th>MaxDepth</th>
                                        <th>Production Capacity</th>
                                        <th>Machine Size</th>
                                        <th>Net WeightKG</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.listTablets)
                                    {
                                        <tr>
                                            <td>@item.id</td>
                                            <td>@item.ModelNumber</td>
                                            <td>@item.Dies</td>
                                            <td>@item.MaxPressure</td>
                                            <td>@item.MaxDiameterMM</td>
                                            <td>@item.MaxDepthFillMM</td>
                                            <td>@item.ProductionCapacity</td>
                                            <td>@item.MachineSize</td>
                                            <td>@item.NetWeightKG</td>
                                            <td>
                                                <a class="btn btn-primary btn-sm" href="/updateCapsules?id=@item.id">Edit</a>
                                                <a class="btn btn-danger btn-sm" href="/deleteCapsules?id=@item.id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <nav>
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link" href="#">Prev</a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">3</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">4</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
            <!-- /.row-->
        </div>
    </div>
</div>