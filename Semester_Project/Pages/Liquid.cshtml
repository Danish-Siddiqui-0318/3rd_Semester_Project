@page
@model Semester_Project.Pages.LiquidModel
@{
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <!-- /.row-->
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4>Liquid Data</h4>
                            <a class="btn btn-success btn-sm" href="/addLiquid">Add Liquids</a>
                        </div>
                        <div class="card-body">
                            <table class="table table-responsive-sm table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>ModelName</th>
                                        <th>AirPressure</th>
                                        <th>AirVolume</th>
                                        <th>FillingSpeed</th>
                                        <th>FillingRangeML</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.listliquid)
                                    {
                                        <tr>
                                            <td>@item.id</td>
                                            <td>@item.ModelName</td>
                                            <td>@item.AirPressure</td>
                                            <td>@item.AirVolume</td>
                                            <td>@item.FillingSpeed</td>
                                            <td>@item.FillingRangeML</td>
                                            <td>
                                                <a class="btn btn-primary btn-sm" href="/updateLiquid?id=@item.id">Edit</a>
                                                <a class="btn btn-danger btn-sm" href="/deleteLiquid?id=@item.id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <nav>
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link" href="#">Prev</a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">3</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">4</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
            <!-- /.row-->
        </div>
    </div>
</div>