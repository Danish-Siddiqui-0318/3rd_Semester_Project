@page
@model Semester_Project.Pages.addCapsulesModel
@{
    ViewData["Title"] = "Add Capsules";
}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100">
        <div class="col-md-10 col-lg-8 col-xl-6 mx-auto">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3 class="mb-0">Add Capsules</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label for="ProductName" class="fw-bold">Product Name</label>
                            <input type="text" id="ProductName" name="ProductName" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Output" class="fw-bold">Output</label>
                            <input type="text" id="Output" name="Output" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="CapsuleSizeMM" class="fw-bold">Capsule Size (MM)</label>
                            <input type="number" id="CapsuleSizeMM" name="CapsuleSizeMM" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="MachineDimension" class="fw-bold">Machine Dimension</label>
                            <input type="text" id="MachineDimension" name="MachineDimension" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="ShippingWeightKG" class="fw-bold">Shipping Weight (KG)</label>
                            <input type="number" step="0.01" id="ShippingWeightKG" name="ShippingWeightKG" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="ImageURL" class="fw-bold">Add Image</label>
                            <input type="file" id="ImageURL" name="ImageURL" class="form-control" accept="image/*" required />
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger text-center">
                                @Model.ErrorMessage
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <div class="alert alert-success text-center">
                                @Model.SuccessMessage
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            <a asp-page="Tablets" class="btn btn-danger btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

