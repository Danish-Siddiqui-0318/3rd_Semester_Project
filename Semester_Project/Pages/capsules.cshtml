@page
@model Semester_Project.Pages.CapsulesModel
@{
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <!-- /.row-->
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4>Capsules Data</h4>
                            <a class="btn btn-success btn-sm" href="/createUsers">Add Capsule</a>
                        </div>
                        <div class="card-body">
                            <table class="table table-responsive-sm table-bordered table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Product Name</th>
                                        <th>Output</th>
                                        <th>CapsuleSizeMM</th>
                                        <th>MachineDimension</th>
                                        <th>ShippingWeightKG</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.listCapsules)
                                    {
                                        <tr>
                                            <td>@item.id</td>
                                            <td>@item.Product_Name</td>
                                            <td>@item.Output</td>
                                            <td>@item.CapsuleSizeMM</td>
                                            <td>@item.MachineDimension</td>
                                            <td>@item.ShippingWeightKG</td>
                                            <td>
                                                <a class="btn btn-primary btn-sm" href="/updateCapsules?id=@item.id">Edit</a>
                                                <a class="btn btn-danger btn-sm" href="/deleteCapsules?id=@item.id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <nav>
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link" href="#">Prev</a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">3</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">4</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
            <!-- /.row-->
        </div>
    </div>
</div>