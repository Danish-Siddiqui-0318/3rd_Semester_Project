@page
@model Semester_Project.Pages.signupModel
@{
    ViewData["Title"] = "Signup";
}
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-danger">
        <strong> @Model.errorMessage</strong>
    </div>
}
<div class="container d-flex justify-content-center align-items-center vh-100"
     style="background: linear-gradient(135deg, #0047ab, #1ca9c9);">
    <div class="col-md-5">
        <div class="card border-0 shadow-lg p-4 rounded-4"
             style="backdrop-filter: blur(15px); background: rgba(255, 255, 255, 0.15);">
            <div class="card-header text-center border-0 bg-transparent">
                <h3 class="fw-bold text-white">Signup</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label fw-bold text-white">Name</label>
                        <input type="text" name="name" class="form-control rounded-pill border-0 shadow-sm" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label fw-bold text-white">Email</label>
                        <input type="email" name="email" class="form-control rounded-pill border-0 shadow-sm" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label fw-bold text-white">Password</label>
                        <input type="password" name="password" class="form-control rounded-pill border-0 shadow-sm" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label fw-bold text-white">Role</label>
                        <select name="role" class="form-select rounded-pill border-0 shadow-sm" required>
                            <option value="Admin">Admin</option>
                            <option value="User">User</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-light text-dark fw-bold px-4 py-2 rounded-pill shadow">Create</button>
                        <a asp-page="Users" class="btn btn-outline-light fw-bold px-4 py-2 rounded-pill shadow">Cancel</a>
                    </div>
                </form>
                @if (Model.successMessage.Length > 0)
                {
                    <div class="alert alert-success mt-3 text-center rounded-pill shadow">
                        <strong>@Model.successMessage</strong>
                    </div>
                }
            </div>
        </div>
    </div>
</div>




