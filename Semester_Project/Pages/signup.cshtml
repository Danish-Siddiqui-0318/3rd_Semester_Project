@page
@model Semester_Project.Pages.signupModel
@{
    ViewData["Title"] = "Signup";
}
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-danger">
        <strong> @Model.errorMessage</strong>
    </div>
}
 <div class="container-fluid">
            <div class="animated fadeIn">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card-group">
                            <div class="card p-4">
                                <div class="card-body">
                                    <h1>Sign Up</h1>
                                    <form method="post">
                                        <p class="text-muted">Create your account</p>
                                        <div class="input-group mb-3">
                                            <input class="form-control" type="text" placeholder="Full Name" name="name" required />
                                        </div>
                                        <div class="input-group mb-3">
                                            <input class="form-control" type="email" placeholder="Email" name="email" required />
                                        </div>
                                        <div class="input-group mb-3">
                                            <input class="form-control" type="password" placeholder="Password" name="password" required />
                                        </div>
                                        <div class="input-group mb-3">
                                            <select name="role" class="form-select" required>
                                                <option value="admin">Admin</option>
                                                <option value="user">User</option>
                                            </select>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <button class="btn btn-primary px-4" type="submit">Sign Up</button>
                                            </div>
                                        </div>
                                    </form>
                                    @if (Model.successMessage.Length > 0)
                                    {
                                        <div class="alert alert-success mt-3 text-center rounded-pill shadow">
                                            <strong>@Model.successMessage</strong>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                                <div class="card-body text-center">
                                    <div>
                                        <h2>Welcome Back!</h2>
                                        <p>Already have an account? Sign in to access your dashboard.</p>
                                        <a class="btn btn-primary active mt-3" href="/login" type="button">Login</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
