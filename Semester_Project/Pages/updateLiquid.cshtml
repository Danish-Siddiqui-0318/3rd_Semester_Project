@page
@model Semester_Project.Pages.updateLiquidModel
@{
    ViewData["Title"] = "Update Liquid";
}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100">
        <div class="col-md-10 col-lg-8 col-xl-6 mx-auto">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3 class="mb-0">Update Liquids</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <input type="text" name="ID" class="form-control" required value="@Model.liquidInfo.id" hidden />
                        <div class="form-group mb-3">
                            <label for="ModelName" class="fw-bold">Model Name</label>
                            <input type="text" id="ModelName" name="ModelName" class="form-control" required value="@Model.liquidInfo.ModelName" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="AirPressure" class="fw-bold">Air Pressure</label>
                            <input type="number" step="0.01" id="AirPressure" name="AirPressure" class="form-control" required value="@Model.liquidInfo.AirPressure" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="AirVolume" class="fw-bold">Air Volume</label>
                            <input type="text" id="AirVolume" name="AirVolume" class="form-control" required value="@Model.liquidInfo.AirVolume" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="FillingSpeed" class="fw-bold">Filling Speed</label>
                            <input type="number" step="0.01" id="FillingSpeed" name="FillingSpeed" class="form-control" required value="@Model.liquidInfo.FillingSpeed" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="FillingRangeML" class="fw-bold">Filling Range (ML)</label>
                            <input type="text" step="0.01" id="FillingRangeML" name="FillingRangeML" class="form-control" required value="@Model.liquidInfo.FillingRangeML" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="ImageURL" class="fw-bold">Add Image</label>
                            <input type="file" id="ImageURL" name="ImageURL" class="form-control" accept="image/*"  />
                        </div>
                        @if (!string.IsNullOrEmpty(Model.liquidInfo.image))
                        {
                            <div class="mb-3 text-center">
                                <label class="fw-bold">Current Image:</label><br />
                                <img src="@Model.liquidInfo.image" alt="Current Image" class="img-fluid" style="max-width: 200px; border-radius: 10px;" />
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.errorMessage))
                        {
                            <div class="alert alert-danger text-center">
                                @Model.errorMessage
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.successMessage))
                        {
                            <div class="alert alert-success text-center">
                                @Model.successMessage
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            <a asp-page="Liquid" class="btn btn-danger btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

