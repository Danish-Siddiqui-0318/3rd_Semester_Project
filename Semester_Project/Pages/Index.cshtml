@page
@model IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}




<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
    <div class="container d-flex justify-content-center">
        <a class="navbar-brand fw-bold" href="#">Medi Admin</a>
    </div>
</nav>

    <header class="bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4 fw-bold">Welcome, Admin!</h1>
            <p class="lead">Manage your system efficiently and stay updated with real-time insights.</p>
        </div>
    </header>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow text-center p-4">
                    <div class="card-body">
                        <h1 class="text-primary"><i class="bi bi-people-fill"></i></h1>
                        <h4 class="card-title">Total Users</h4>
                        <p class="card-text fs-3 fw-bold">1,245</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow text-center p-4">
                    <div class="card-body">
                        <h1 class="text-success"><i class="bi bi-bar-chart-fill"></i></h1>
                        <h4 class="card-title">Reports Generated</h4>
                        <p class="card-text fs-3 fw-bold">320</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow text-center p-4">
                    <div class="card-body">
                        <h1 class="text-warning"><i class="bi bi-gear-fill"></i></h1>
                        <h4 class="card-title">System Settings</h4>
                        <p class="card-text fs-3 fw-bold">Updated</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
